{
	"name": "@frontend/common",
	"version": "1.0.0",
	"description": "Common shared utilities and types",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.mjs",
	"source": "src/index.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./*": {
			"import": "./dist/*.mjs",
			"require": "./dist/*.js",
			"types": "./dist/*.d.ts"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"dompurify": "^3.3.1",
		"isomorphic-dompurify": "3.0.0-rc.2"
	}
}
